<h2 class="popUpHeader">Change Profile</h2>

<form action="/edit" method="post">
<input type="hidden" name="_method" value="put">
<input class="popUpInput" type="username" name="username" placeholder="<%= @user.username %>" value="">
<input class="popUpInput"type="email" name="email" placeholder="<%= @user.email %>" value="">
<input class="popUpInput" type="password" name="password" placeholder="PASSWORD" value="">
<input class="popUpSubmit" type="submit" value="SAVE">
</form>

<a href="/users/<%= @user.id %>" class="closePopUp">BACK TO PROFILE</a>